@model AprenderHolandes.Models.MateriaCursada
@inject SignInManager<Persona> SignInManager

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Grupo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Activo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Activo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Profesor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Profesor.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.Raw("Horas por semana")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CantidadHorasPorSemana)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
</div>
<hr />
<h4>Alumnos</h4>
<div>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.Raw("Nombre")
                </th>
                <th>
                    @Html.Raw("Email")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var amc in Model.AlumnoMateriaCursadas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => amc.Alumno.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => amc.Alumno.Email)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @(User.IsInRole("Profesor")){
    <div>
        <a asp-action="Edit" asp-route-id="@Model.MateriaCursadaId">Editar</a>
    </div>

    }
